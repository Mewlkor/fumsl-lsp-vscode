{
	"displayName": "FumslLSP",
	"name": "fumsllsp",
	"description": "A Language Server for Fumsl DSL.",
	"author": "Markus Schmidt, Florian Gru√ü",
	"license": "MIT",
	"version": "0.1.0",
	"publisher": "Mewlkor",
	"engines": {
		"vscode": "^1.83.0"
	},
	"categories": [
		"Programming Languages"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/Mewlkor/fumsl-lsp-vscode.git"
	},
	"activationEvents": [
		"onLanguage:fumsl"
	],
	"main": "./out/extension",
	"contributes": {
		"languages": [
			{
				"id": "fumsl",
				"aliases": [
					"Fumsl",
					"fumsl"
				],
				"extensions": [
					".Fumsl",
					".fumsl"
				]
			}
		],
		"grammars": [
			{
				"language": "fumsl",
				"scopeName": "source.fumsl",
				"path": "./syntaxes/fumsl.tmGrammar.json"
			}
		],
		"configuration": [
			{
				"title": "FumslLSP",
				"properties": {
					"FumslLSP.trace.server": {
						"scope": "window",
						"type": "string",
						"enum": [
							"off",
							"messages",
							"verbose"
						],
						"default": "off",
						"description": "Traces the communication between VSCode and the FumslLSP server."
					}
				}
			}
		],
		"configurationDefaults": {
			"[fumsl]": {
				"editor.semanticHighlighting.enabled": true
			}
		}
	},
	"scripts": {
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node",
		"esbuild": "npm run -S esbuild-base -- --sourcemap",
		"esbuild-watch": "npm run -S esbuild-base -- --sourcemap --watch",
		"test-compile": "tsc -p ./"
	},
	"dependencies": {
		"vscode-languageclient": "^7.0.0"
	},
	"devDependencies": {
		"@types/mocha": "^10.0.2",
		"@types/node": "18.x",
		"@types/vscode": "^1.83.0",
		"@typescript-eslint/eslint-plugin": "^6.7.3",
		"@typescript-eslint/parser": "^6.7.3",
		"@vscode/test-electron": "^2.3.4",
		"@vscode/vsce": "^2.21.1",
		"esbuild": "^0.19.5",
		"eslint": "^8.50.0",
		"glob": "^10.3.3",
		"mocha": "^10.2.0",
		"typescript": "^5.2.2"
	}
}